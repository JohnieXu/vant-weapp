.swiper {
  width: 750rpx;
  height: 100vh;
}
.swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.swiper-item .image {
  width: 640rpx;
  height: 600rpx;
  margin-top: 130rpx;
}

.swiper-item .text {
  flex: 1;
}

.swiper-item .title {
  flex: 0 0 44rpx;
  margin: 50rpx auto 40rpx;
  font-size: 44rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  color: #1b1b1b;
}

.swiper-item .desc {
  flex: 0 0 26rpx;
  margin-bottom: 40rpx;
  font-size: 26rpx;
  font-weight: normal;
  letter-spacing: 4rpx;
  color: #666;
}

.swiper-item .button-wrapper {
  --button-normal-font-size: 36rpx;
  flex: 0;
  margin-bottom: 220rpx;
  width: 500rpx;
}

.swiper-item .button-wrapper .button .van-button {
  box-shadow: 0 0 20rpx rgba(130,217,217,.5);
}

/* 自定义轮播图指示点样式 */
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  bottom: 140rpx;
}

.swiper .wx-swiper-dot {
  width: 14rpx;
  height: 14rpx;
}
